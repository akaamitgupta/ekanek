<%= link_to "Upload Document", upload_file_path %>
<br>
<br>

<table style="width:100%">
  <tr>
    <th>Title</th>
    <th>Desciption</th>
    <th>Document</th>
  </tr>
  <% @user.documents.each do |document| %>
    <tr>
      <td> <%= document.title %> </td>
      <td> <%= document.description %> </td>
      <td> <a href="<%= document.document.url %>" target="_blank"><%= document.document_file_name %></a> </td>
    </tr>
  <% end %>
</table>

<br>
<br>
<%= button_to "Logout", logout_path %>